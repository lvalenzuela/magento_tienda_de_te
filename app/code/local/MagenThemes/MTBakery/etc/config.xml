<config>
    <modules>
        <MagenThemes_MTBakery>
            <version>1.0.4</version>
        </MagenThemes_MTBakery>
    </modules>
    <frontend>
        <routers>
            <mtbakery>
                <use>standard</use>
                <args>
                    <module>MagenThemes_MTBakery</module>
                    <frontName>mtbaskery</frontName>
                </args>
            </mtbakery>
        </routers>
        <layout>
            <updates>
                <mtbakery>
                    <file>mtbakery.xml</file>
                </mtbakery>
            </updates>
        </layout>
		<events>
            <controller_action_postdispatch>
                <observers>
                    <prevnext_set_filtered_category_product_collection>
                        <class>mtbakery/observer</class>
                        <method>setPrevNextProductCollection</method>
                    </prevnext_set_filtered_category_product_collection>
                </observers>
            </controller_action_postdispatch>
        </events>
        <catalog_block_product_list_collection>
            <observers>
                <mtdefault>
                    <type>model</type>
                    <class>mtbakery/observer</class>
                    <method>catalogBlockProductCollectionBeforeToHtml</method>
                </mtdefault>
            </observers>
        </catalog_block_product_list_collection>
    </frontend>
    <admin>
        <routers>
	       <mtbakery>
				<use>admin</use>
				<args>
				    <module>MagenThemes_MTBakery</module>
				    <frontName>mtbaskery</frontName>
				</args>
	       </mtbakery>
        </routers>
    </admin>
    <adminhtml>
		<layout>
		    <updates>
			<mtbakery>
			    <file>mtbakery.xml</file>
			</mtbakery>
		    </updates>
		</layout>
        <events>
            <controller_action_postdispatch_adminhtml_system_config_save>
                <observers>
                    <mtbakery>
                        <type>singleton</type>
                        <class>mtbakery/observer</class>
                        <method>configSave</method>
                    </mtbakery>
                </observers>
            </controller_action_postdispatch_adminhtml_system_config_save>
            <store_edit>
                <observers>
                    <mtbakery>
                        <type>singleton</type>
                        <class>mtbakery/observer</class>
                        <method>storeEdit</method>
                    </mtbakery>
                </observers>
            </store_edit>
        </events>
    </adminhtml>   
    <global>
        <models>
            <mtbakery>
                <class>MagenThemes_MTBakery_Model</class>
            </mtbakery>
            <core>
                <rewrite>
                    <layout>MagenThemes_MTTheme_Model_System_Layout_Layout</layout>
                </rewrite>
            </core>
        </models>
        <resources>
